<%= render 'shared/error_messages', object: f.object %>

<div class="row">
  <div class="content-layout">
    <div class="form-group">
      <%= f.label :about, placeholder: "About you ..." do
        ('About (<b><span id="aboutCounter"></span></b> characters left)').html_safe
      end %>
      <%= f.text_area :about, :rows => "5", class: "form-control text-area-counter", data_target: "aboutCounter", data_max_length: "#{PersonalDetail::ABOUT_MAXIMUM_LENGTH}" %>
    </div>
    
    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-large btn-primary submit-layout" %>
    </div>
  </div>
</div>

<%= debug(f.object) if Rails.env.development? %>

