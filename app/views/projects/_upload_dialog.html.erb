<% include_javascript 'projects/upload_dialog.js' %>

<div id="resource_upload_dialog" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="
  resource_upload_dialog_label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <%= form_tag({:action => :upload}, :multipart => true, :target => 'upload_target', :onsubmit => 'startUpload();') do %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3 id="resource_upload_dialog_label">Upload File</h3>
        </div>
        <div class="modal-body">
          <!--
          <div id="resource_upload_progress_bar" class="progress">
            <div class="bar" style="width: 0%;"></div>
          </div>
          -->

          <div id="resource_upload_progress_bar" class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
            </div>
          </div>

          <div class="form-group">
            <p id="resource_upload_dialog_result"></p>
            <%= hidden_field_tag 'resource_reference_field' %>
            <%= file_field_tag 'resource_data', class: "form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn cancel-layout" data-dismiss="modal" aria-hidden="true">Close</button>
          <!--<button class="btn btn-primary">Save changes</button>-->
          <!--<input type="submit" name="submitBtn" value="Upload" class="btn btn-primary" />-->
          <%= submit_tag "Upload", :class => "btn btn-primary submit-layout", :id => "resource_upload_button" %>
        </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<iframe id="upload_target" name="upload_target" src="" style="width:0;height:0;border:0px none #fff;position:absolute;top:-3000;left:-3000"></iframe>