<% include_javascript 'projects/upload_dialog.js' %>

<div id="resource_upload_dialog" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="
  resource_upload_dialog_label" aria-hidden="true">

  <%= form_tag({:action => :upload}, :multipart => true, :target => 'upload_target', :onsubmit => 'startUpload();') do %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="resource_upload_dialog_label">Upload File</h3>
    </div>
    <div class="modal-body">
      <div id="resource_upload_progress_bar" class="progress">
        <div class="bar" style="width: 0%;"></div>
      </div>
      <p id="resource_upload_dialog_result"></p>
      <%= hidden_field_tag 'resource_reference_field' %>
      <%= file_field_tag 'resource_data' %>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <!--<button class="btn btn-primary">Save changes</button>-->
      <!--<input type="submit" name="submitBtn" value="Upload" class="btn btn-primary" />-->
      <%= submit_tag "Upload", :class => "btn btn-primary", :id => "resource_upload_button" %>
    </div>
  <% end %>
</div>

<iframe id="upload_target" name="upload_target" src="" style="width:0;height:0;border:0px none #fff;position:absolute;top:-3000;left:-3000"></iframe>