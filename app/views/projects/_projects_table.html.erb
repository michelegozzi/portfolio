<% include_javascript 'projects/projects_table.js' %>

<table id="projectsTable" class="table table-bordered table-hover sortable">
  <thead>
    <tr>
      <th class="span3"><%= sortable "name", "Name" %></th>
      <th class="span3"><%= sortable "sectors.description", "Sector" %></th>
      <th class="span5">Description</th>
      <th class="span1">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>

    <tr>
      <td class="name clickable">
        <%= project.name %>
      </td>
      <td class="sector clickable">
        <% if !project.sector.nil? %>
        <%= project.sector.description %>
        <% end %>
      </td>
      <td class="description clickable">
        <%= project.description.html_safe %>
      </td>
      <td>
        <%= link_to "Delete", project_path(project), method: :delete, data: { confirm: "You sure?" } %>
      </td>
      
      <input type="hidden" name="id" value="<%= project.id %>" />
    </tr>

    <% end %>
  </tbody>
</table>

<%= will_paginate @projects %>